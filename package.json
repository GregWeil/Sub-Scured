{
  "name": "glitch-mvp-node",
  "version": "0.1.0",
  "description": "A simple Node app built on fastify, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "typescript": "tsc --noEmit",
    "build:client": "esbuild client.ts --bundle --outdir=build",
    "build:server": "esbuild server.ts --bundle --platform=node  --external:./node_modules/* --outdir=build",
    "build": "npm run build:client & npm run build:server & wait",
    "start": "npm run build && node build/server.js"
  },
  "dependencies": {
    "fastify": "^4.7.0",
    "handlebars": "^4.7.7",
    "@fastify/static": "^6.5.0",
    "esbuild": "^0.15.10",
    "three": "^0.145.0",
    "typescript": "^4.8.4",
    "@types/three": "^0.144.0",
    "@types/node": "^14.18.31"
  },
  "engines": {
    "node": "14.x"
  },
  "repository": {
    "url": "https://glitch.com/edit/#!/glitch-mvp-node"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch"
  ]
}
